<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp.Client.MainPage"
             Title="ChatApp">

    <Grid Padding="24">
        <VerticalStackLayout Spacing="18" VerticalOptions="Center">

            <Label Text="ChatApp"
                   FontSize="32"
                   FontAttributes="Bold" />

            <Label Text="Prosty klient czatu w .NET MAUI. Przejdź do ekranu czatu i połącz się z hubem."
                   FontSize="13"
                   TextColor="{StaticResource ColorText1}" />

            <Frame Padding="16"
                   CornerRadius="18"
                   BackgroundColor="{StaticResource ColorSurface0}"
                   HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Szybki test UI"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource ColorText1}" />

                    <Button x:Name="CounterBtn"
                            Text="Kliknij mnie"
                            Clicked="OnCounterClicked"
                            Background="{StaticResource PrimaryButtonBrush}" />

                    <Label Text="Ten ekran możesz zastąpić nawigacją do ChatPage w Shellu (AppShell)."
                           FontSize="11"
                           TextColor="{StaticResource ColorText2}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </Grid>

</ContentPage>
